<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.telaCadastroPropriedade">

    <ImageView
        android:id="@+id/setaProximo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_seta_proximo"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/tv_proprietario"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="Proprietário"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tv_localizacao"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="Localização"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_telefone"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tv_diaria"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="Valor (Diária)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_localizacao"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tv_telefone"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="Telefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cpf"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tv_cpf"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="CPF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomePropriedade"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/tv_nomePropriedade"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:hint="Nome da propriedade (apelido)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_proprietario"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>